// Utilizando caracteres ASCI
// Testando função atof
// Gabriel Russi


#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// atoi = string para inteiro
// atof = string para ponto flutuante

int main()
{
    char minhaStringDouble[4] = "2.3";
    double d = atof(minhaStringDouble);
    printf("O dobro de %f resulta em %f\'",d,d+d);
}

------------------------------------------------------------------------------

// Testando função atoi


#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main()
{
    char minhaStringDouble[4] = "50";
    int i = atof(minhaStringDouble);
    printf("A soma de %d com 10 resulta em %d\'",i,i+10);
}

-------------------------

// Contador de caracteres de um string
// Gabriel Russi


#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main()
{
    char texto[100];
    int i = 0, contador  = 0;

    printf("Digite uma palavra: ");
    fgets(texto, sizeof(texto), stdin);

    while(texto[i] != '\0')
    {
        contador++;

        i++;
    }
    printf("Quantidade de caracteres: %d\n", contador-1);

    return 0;
}


